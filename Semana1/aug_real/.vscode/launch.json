    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Compilar y depurar el archivo activo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/aug_real",
            "args": [ "-v=./data/tablero_000_000.avi", "5", "6", "0.04", "./data/logitech.xml", "./data/logitech_000_000.png" ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ compilar archivo activo",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}